<div class="row">
  <div class="trail-info large-12 columns">
    <div class="large-4 columns">
      <h4 style="text-align: center;"><%= @trail.name %></h4><br>
    <span>Park Name: <%= @trail.park_name %></span><br>
    <span>Date: <%= @trail.date_hiked.strftime("%m/%d/%Y") %></span><br>
    <span>Distance: <%= @trail.distance %></span><br>
    <span>Rating: <%= @trail.rating %></span><br>
    <% if @trail.lat != nil && @trail.lng != nil %>
      <span>Latitude: <%= @trail.lat %></span><br>
      <span>Longitude: <%= @trail.lng %></span><br>
    <% end %><br>
    <span style="white-space: pre-line;"><%= @trail.description %></span><br>
    <% if current_user.id == @trail.user_id %>
    <%= link_to "Edit Trail", edit_trail_path(@trail)%>
    <%= link_to "Delete Trail", trail_path(@trail), data: { :confirm => "Are you sure?" }, method: :delete %>
    <% end %>
  </div>

  <div style="margin-top: 25px; margin-bottom: 25px; "class="large-8 columns">
    <div id="map" style='width: 100%; height: 400px;'></div>
  </div>
</div><br>
